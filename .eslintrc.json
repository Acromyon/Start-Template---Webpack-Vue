{
	"extends": [
		"plugin:vue/essential",
		"eslint:all"
	],
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"no-tabs": "off",
		"no-console": "off",
		"no-var": "off",
		"no-plusplus": "off",
		"no-multi-spaces": ["error", {
			"exceptions": {
				"VariableDeclarator": true,
				"ImportDeclaration": true
			}
		}],
		"one-var": ["error", {
			"var": "always",
			"let": "never",
			"const": "never"
		}],
		"prefer-const": "off",
		"capitalized-comments": "off",
		"multiline-comment-style": "off",
		"require-unicode-regexp": "off",
		"indent": "off",
		"array-element-newline": "off",
		"sort-keys": "off",
		"sort-imports": "off",
		"sort-vars": "off",
		"quote-props": "off",
		"space-before-function-paren": "off",
		"padded-blocks": "off",
		"id-length": "off",
		"max-len": ["error", {
			"code": 120
		}]
	}
}